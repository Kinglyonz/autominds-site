{
    "version": 2,
    "cleanUrls": true,
    "trailingSlash": false,
    "functions": {
        "api/email-proxy.js": { "maxDuration": 60 },
        "api/gmail-callback.js": { "maxDuration": 30 }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "origin-when-cross-origin"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Permissions-Policy",
                    "value": "microphone=(self), camera=()"
                },
                {
                    "key": "Strict-Transport-Security",
                    "value": "max-age=63072000; includeSubDomains; preload"
                }
            ]
        }
    ]
}
